<h1>Find your book</h1>

<table>
	<tr>
		<th>Title</th><th>Details</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title%></td>
		<td><%= book.detail%></td>
		<td><%= link_to "Show", book_path(book)%></td>
	</tr>
	<% end %>
</table>
<table>
	<tr>
		<td>
			<%= link_to "To Previous page", { :action => "index", :id => (@prev_page) } %>
		</td>
		<td>
			<%= link_to "To Next page", { :action => "index", :id => (@next_page) } %>
		</td>
	</tr>
</table>